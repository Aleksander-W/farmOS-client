<?xml version='1.0' encoding='utf-8'?>
<widget id="org.farmos.app" version="0.2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>farmOS</name>
    <description>
				A native front-end app for farmOS.
		</description>
    <author email="mike@farmier.com" href="http://www.farmOS.org">
				farmOS Team
		</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-camera" spec="^4.0.3">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="farmOS would like access to the camera" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="farmOS would like access to the photo library" />
    </plugin>
    <config-file platform="ios" parent="NSPhotoLibraryUsageDescription" mode="replace">
      <key>NSPhotoLibraryUsageDescription</key>
      <string>farmOS would like access to the photo library</string>
    </config-file>
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <engine name="android" spec="^7.1.0" />
    <engine name="ios" spec="^4.5.5" />
</widget>
